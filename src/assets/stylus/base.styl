@import "./variable.styl"

body, html
  width: 100%
  height: 100%
  line-height: 1
  overflow: hidden
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent

/* fit iphone x */
@supports (bottom: env(safe-area-inset-bottom))
  body
    padding-bottom: $fixIphoneX

#app {
  position: relative;
  width: 100%;
  height: 100%;
}

.page {
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-flow: column;
  width: 100%;
  height: 100%;
  color: $color-dark-gray;
  overflow: hidden;
  will-change: transform;
  backface-visibility: hidden;
  perspective: 1000;
  background: #ffffff;
  -webkit-overflow-scrolling: touch;
  &.page_pb {
    padding-bottom: 52px;
  }
}

.page-scroll {
  position: relative;
  width: 100%;
  height: 100%;
  flex: 1;
  overflow: hidden;
}

.re_circle
  position absolute
  top 0
  left 0
  z-index 99
  width 40px
  height 40px
  border-radius 50%
  opacity 0.6
  pointer-events none
  background-color $color-spin-blue
  animation single-bounce 1.0s ease

.btn-wrap
  margin-top 20px
  text-align center
  & button
    margin: 0 10px
